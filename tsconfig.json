{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@components/*": [
        "./src/components/*"
      ],
      "@utils/*": [
        "./src/utils/*"
      ],
      "@customTypes/*": [
        "./src/customTypes/*"
      ],
      "@lib/firebase/*": [
        "./src/lib/firebase/*"
      ],
      "@lib/hooks/*": [
        "./src/lib/hooks/*"
      ],
      "@lib/requests/*": [
        "./src/lib/requests/*"
      ],
      "@public/*": [
        "./public/*"
      ],
      "@contexts/*": [
        "./src/contexts/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "vitest.config.mts"
  ],
  "exclude": [
    "node_modules"
  ]
}
